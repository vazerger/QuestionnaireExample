<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <base href="/">
</head>
<body data-ng-app="ApplicationModule">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Анкетирование", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Начало", "Index", "Home")</li>
                    <li><a href="/report">Общий отчет</a></li>
                    <li><a href="/myReport">Второй отчет</a></li>                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/config">Настройка, удаление</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        
        @RenderBody()

        <footer>
            @* <p>&copy; @DateTime.Now.Year – приложение</p> *@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularPage")

    @RenderSection("scripts", required: false)
</body>
</html>
